<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ivCountryStyle">
        <item name="android:layout_width">@dimen/dp_200</item>
        <item name="android:layout_height">@dimen/dp_200</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginTop">@dimen/dp_20</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:layout_marginBottom">@dimen/dp_5</item>
        <item name="android:contentDescription">@string/todo</item>
        <item name="android:padding">@dimen/dp_5</item>
        <item name="android:paddingStart">@dimen/dp_10</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
    </style>

    <style name="tvLabelStyleCountryDetail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

    <style name="tvValuesStyleCountryDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/md_deep_orange_A100</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="viewCountryDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="tvLabelActivityMain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/dp_10</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

    <style name="btnSplashScreens">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginLeft">@dimen/dp_15</item>
        <item name="android:layout_marginRight">@dimen/dp_15</item>
        <item name="android:layout_marginBottom">@dimen/dp_25</item>
        <item name="android:background">@drawable/button_border</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:textColor">@color/md_deep_orange_300</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="llCasesRowActivityMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:layout_marginBottom">@dimen/dp_5</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>