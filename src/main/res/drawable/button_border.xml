<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_15" />
            <stroke android:width="@dimen/dp_10" android:color="@color/gray" />
            <gradient android:angle="-90" android:endColor="@color/gray" android:startColor="@color/gray" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_15" />
            <stroke android:width="@dimen/dp_10" android:color="@color/white" />
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_15" />
            <stroke android:width="@dimen/dp_10" android:color="@color/white" />
            <gradient android:angle="-90" android:endColor="@color/white" android:startColor="@color/white" />
        </shape>
    </item>
</selector>